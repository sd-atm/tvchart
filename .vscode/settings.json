{
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        }
    },
    "files.associations": {
        "*.html": "jinja-html"
    },
}